generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String         @unique
  password      String
  role          Role           @default(USER)
  profiles      Profile[]
  subscriptions Subscription[]
  createdAt     DateTime       @default(now())
}

model Profile {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  ownerId     String     @db.ObjectId
  owner       User       @relation(fields: [ownerId], references: [id])
  name        String
  description String?
  logo        String?
  socialLinks Json?
  location    Json?
  menus       Menu[]
  feedbacks   Feedback[]
  createdAt   DateTime   @default(now())
}

model Menu {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  profileId   String      @db.ObjectId
  profile     Profile     @relation(fields: [profileId], references: [id])
  name        String
  description String?
  types       Type[]
  categories  Category[]
  tags        Tag[]
  items       Item[]
  isActive    Boolean     @default(false)
  analytics   Analytics[]
  createdAt   DateTime    @default(now())
}

model Type {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  image  String?
  menuId String @db.ObjectId
  menu   Menu   @relation(fields: [menuId], references: [id])
  items  Item[]
}

model Category {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  image  String?
  menuId String @db.ObjectId
  menu   Menu   @relation(fields: [menuId], references: [id])
  items  Item[]
}

model Tag {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  color  String
  menuId String @db.ObjectId
  menu   Menu   @relation(fields: [menuId], references: [id])
}

model Item {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  image       String?
  price       Float?
  tags        String[]
  
  // Relations
  categoryId  String?   @db.ObjectId
  typeId      String?   @db.ObjectId
  menuId      String    @db.ObjectId
  
  menu     Menu     @relation(fields: [menuId], references: [id])
  category Category? @relation(fields: [categoryId], references: [id])
  type     Type?     @relation(fields: [typeId], references: [id])
  
  // createdAt removed to fix the null error
}

model Feedback {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  profileId String   @db.ObjectId
  profile   Profile  @relation(fields: [profileId], references: [id])
  userName  String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
}

model Subscription {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String   @db.ObjectId
  user       User     @relation(fields: [userId], references: [id])
  plan       Plan
  expiresAt  DateTime
  active     Boolean  @default(true)
  paymentRef String?
}

model Analytics {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  menuId String   @db.ObjectId
  menu   Menu     @relation(fields: [menuId], references: [id])
  date   DateTime
  scans  Int      @default(0)

  // Add unique constraint for MongoDB
  @@unique([menuId, date], map: "Analytics_menuId_date_key")
  @@map("analytics")
}

enum Role {
  USER
  ADMIN
}

enum Plan {
  FREE
  STANDARD
  CUSTOM
}