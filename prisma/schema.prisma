generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String         @unique
  password      String
  phone         String?
  location      String?
  avatar        String?
  preferences   Json?          // { language, timezone, currency, dateFormat }
  role          Role           @default(USER)
  isActive      Boolean        @default(true)
  refreshTokens RefreshToken[]
  profiles      Profile[]
  subscriptions Subscription[]
  payments      Payment[]
  tickets       SupportTicket[]
  teamMembers   TeamMember[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime?      @updatedAt
}

model Profile {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  ownerId     String     @db.ObjectId
  owner       User       @relation(fields: [ownerId], references: [id])
  name        String
  status      ProfileStatus @default(ACTIVE)
  description String?
  logo        String?
  socialLinks Json?
  location    Json?
  menus       Menu[]
  feedbacks   Feedback[]
  teamMembers TeamMember[]
  createdAt   DateTime   @default(now())
  phone       String?
  email       String?
  website     String?
  wifiName    String?
  wifiPassword String?
  mapUrl      String?
  businessHours Json?
}

// Team member for restaurant profile
model TeamMember {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  profileId String     @db.ObjectId
  profile   Profile    @relation(fields: [profileId], references: [id])
  email     String     // Email of the team member (may or may not be a registered user)
  name      String     // Display name
  role      TeamRole   @default(STAFF)
  invitedAt DateTime   @default(now())
  acceptedAt DateTime? // When they accepted the invitation (null if pending)
  userId    String?    @db.ObjectId // Linked user ID after they accept invitation
  user      User?      @relation(fields: [userId], references: [id])

  @@unique([profileId, email])
  @@index([profileId])
}

enum TeamRole {
  MANAGER   // Can manage menus, items, but not billing or delete profile
  STAFF     // Can view and edit menus/items only
}

model Menu {
  id                 String        @id @default(auto()) @map("_id") @db.ObjectId
  profileId          String        @db.ObjectId
  profile            Profile       @relation(fields: [profileId], references: [id])
  name               String
  description        String?
  defaultLanguage    String        @default("en") // Default language code (en, fr, ar, etc.)
  supportedLanguages String[]      @default(["en"]) // Array of supported language codes
  types              Type[]
  categories         Category[]
  tags               Tag[]
  items              Item[]
  translations       Translation[]
  isActive           Boolean       @default(false)
  analytics          Analytics[]
  createdAt          DateTime      @default(now())
  qrCodeUrl          String?
  qrCodeSvg          String?
}

model Type {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  image  String?
  menuId String  @db.ObjectId
  menu   Menu    @relation(fields: [menuId], references: [id])
  items  Item[]
}

model Category {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  image  String?
  menuId String  @db.ObjectId
  menu   Menu    @relation(fields: [menuId], references: [id])
  items  Item[]
}

model Tag {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  color  String
  menuId String @db.ObjectId
  menu   Menu   @relation(fields: [menuId], references: [id])
  itemTags ItemTag[]
}

model Item {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String?
  image         String?
  categoryId    String?   @db.ObjectId
  typeId        String?   @db.ObjectId
  menuId        String    @db.ObjectId
  price         Float?
  originalPrice Float?    // Original price before discount (for promotions)
  isPromotion   Boolean   @default(false)
  menu          Menu      @relation(fields: [menuId], references: [id])
  category      Category? @relation(fields: [categoryId], references: [id])
  type          Type?     @relation(fields: [typeId], references: [id])
  itemTags      ItemTag[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model ItemTag {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  itemId String @db.ObjectId
  tagId  String @db.ObjectId
  item   Item   @relation(fields: [itemId], references: [id])
  tag    Tag    @relation(fields: [tagId], references: [id])

  @@unique([itemId, tagId])
}


model Feedback {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  profileId String   @db.ObjectId
  userName  String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  profile   Profile  @relation(fields: [profileId], references: [id])
}

model Subscription {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String   @db.ObjectId
  plan         Plan
  status       SubscriptionStatus @default(ACTIVE)
  expiresAt    DateTime
  active       Boolean  @default(true)
  paymentRef   String?
  priceCents   Int?
  currency     String?  @default("DZD")
  // Pause/Cancel tracking
  pausedAt     DateTime?
  resumesAt    DateTime?
  canceledAt   DateTime?
  cancelReason String?
  cancelFeedback String?
  createdAt    DateTime? @default(now())
  user         User     @relation(fields: [userId], references: [id])
  payments     Payment[]
}

model Analytics {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  menuId String   @db.ObjectId
  date   DateTime
  scans  Int      @default(0)
  menu   Menu     @relation(fields: [menuId], references: [id])
  @@unique([menuId, date])
  @@index([menuId])
  @@index([date])
}

model RefreshToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model TokenBlacklist {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}

enum Role {
  USER
  RESTAURANT_OWNER
  ADMIN
}

enum ProfileStatus {
  ACTIVE
  SUSPENDED
}

enum Plan {
  FREE
  STANDARD
  CUSTOM
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  EXPIRED
  CANCELED
}

model PlanCatalog {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  plan        Plan   @unique
  priceCents  Int
  currency    String @default("DA")
  description String?
  updatedAt   DateTime @default(now())
}

model Payment {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @db.ObjectId
  subscriptionId  String?  @db.ObjectId
  amountCents     Int
  currency        String   @default("USD")
  status          PaymentStatus
  reference       String?
  createdAt       DateTime @default(now())
  user            User     @relation(fields: [userId], references: [id])
  subscription    Subscription? @relation(fields: [subscriptionId], references: [id])
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

model SupportTicket {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  subject     String
  message     String
  status      TicketStatus @default(OPEN)
  response    String?
  respondedAt DateTime?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

enum TicketStatus {
  OPEN
  RESOLVED
}

// Multilingual support - stores translations for menu items, categories, tags
model Translation {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  menuId       String @db.ObjectId
  menu         Menu   @relation(fields: [menuId], references: [id])
  entityType   String // "item", "category", "tag", "type", "menu"
  entityId     String // The ID of the item/category/tag being translated
  languageCode String // ISO language code: "en", "fr", "ar", "es", etc.
  field        String // The field being translated: "name", "description"
  value        String // The translated text

  @@unique([menuId, entityType, entityId, languageCode, field])
  @@index([menuId, languageCode])
  @@index([entityType, entityId])
}
